    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="#FF2465F7">
            <TextBlock Text="更新个人资料"
                       FontSize="20"
                       Foreground="White"
                       Margin="10" />
            <Button Content="&#xE73E;"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    FontSize="30"
                    Padding="5"
                    Margin="5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Style="{DynamicResource DefaultButtonStyle}"
                    Command="{Binding SaveUpdateCommand}"
                    FontFamily="Segoe MDL2 Assets" />
        </Grid>
        <Image Grid.Row="1"
               Height="250"
               Stretch="UniformToFill"
               Source="{Binding CurrentUser.BasicInfo.ProfileBackgroundImagePath}" />
        <Button Grid.Row="1"
                Background="#90000000"
                Foreground="White"
                BorderThickness="0"
                Style="{DynamicResource DefaultButtonStyle}"
                Command="{Binding UpdateProfileBackgroundImageCommand}">
            <Button.Content>
                <TextBlock VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xE7C5;"
                               FontSize="20"
                               Margin="0, 5, 0, 0" />
                    <TextBlock Text="编辑封面图片"
                               FontSize="20" />
                </TextBlock>
            </Button.Content>
        </Button>
        <Grid Grid.Row="2"
              ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Width="150"
                    Height="150"
                    BorderBrush="White"
                    BorderThickness="3"
                    CornerRadius="100"
                    Margin="20, -50, 20, 50">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding CurrentUser.BasicInfo.AvatarPath}"
                                Stretch="UniformToFill" />
                </Border.Background>
                <Button BorderThickness="0"
                        FontSize="10"
                        Style="{DynamicResource RoundButtonStyle}"
                        Command="{Binding UpdateAvatarCommand}"
                        Foreground="White"
                        Background="#90000000">
                    <Button.Content>
                        <StackPanel>
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE7C5;"
                                       FontSize="30"
                                       Margin="5"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="修改我的头像"
                                       FontSize="18" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Border>
            <TextBlock Grid.Column="1"
                       Text="{Binding CurrentUser.BasicInfo.SignInName}"
                       FontSize="30"
                       Margin="10" />
        </Grid>
        <StackPanel Margin="200, 0, 0, 0"
                    Grid.Row="3"
                    TextBlock.FontSize="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="性别: "
                           VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="男"
                                 Margin="5"
                                 Padding="5"
                                 Style="{DynamicResource RadioButtonStyle}"
                                 Width="100"
                                 IsChecked="{Binding Path=CurrentUser.BasicInfo.Sex, 
                                                 Converter={StaticResource EnumToBoolean},
                                                 ConverterParameter={x:Static core:Sex.Male}}" />
                    <RadioButton Content="女"
                                 Margin="5"
                                 Padding="5"
                                 Style="{DynamicResource RadioButtonStyle}"
                                 Width="100"
                                 IsChecked="{Binding Path=CurrentUser.BasicInfo.Sex, 
                                                 Converter={StaticResource EnumToBoolean},
                                                 ConverterParameter={x:Static core:Sex.Female}}" />
                    <RadioButton Content="保密"
                                 Margin="5"
                                 Padding="5"
                                 Style="{DynamicResource RadioButtonStyle}"
                                 Width="100"
                                 IsChecked="{Binding Path=CurrentUser.BasicInfo.Sex, 
                                                 Converter={StaticResource EnumToBoolean},
                                                 ConverterParameter={x:Static core:Sex.Secret}}" />
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="邮箱:"
                           Margin="5"
                           VerticalAlignment="Center" />
                <TextBox Style="{DynamicResource TextBoxStyle}"
                         Padding="5"
                         Margin="5"
                         Width="300"
                         Background="Transparent"
                         BorderThickness="0, 0, 0, 1"
                         Text="{Binding CurrentUser.ContactInfo.Email}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="主页:"
                           Margin="5"
                           VerticalAlignment="Center" />
                <TextBox Style="{DynamicResource TextBoxStyle}"
                         Padding="5"
                         Margin="5"
                         Width="300"
                         Background="Transparent"
                         BorderThickness="0, 0, 0, 1"
                         Text="{Binding CurrentUser.ContactInfo.BlogAddress}" />
            </StackPanel>
        </StackPanel>
        <Label Grid.Row="0"
               Grid.RowSpan="4"
               FontSize="30"
               Style="{StaticResource LabelStyle}"
               Content="正在更新..."
               Foreground="White"
               Background="#A0000000"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center" />
    </Grid>
</UserControl>
