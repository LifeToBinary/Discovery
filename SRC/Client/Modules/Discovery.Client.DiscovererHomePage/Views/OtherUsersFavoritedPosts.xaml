<UserControl x:Class="Discovery.Client.DiscovererHomePage.Views.OtherUsersFavoritedPosts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Discovery.Client.DiscovererHomePage.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ConcernOrCancelConcernButtonStyle"
               TargetType="{x:Type Button}">
            <Setter Property="Content"
                    Value="收藏" />
            <Setter Property="Background"
                    Value="Green" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBeFavorited}"
                             Value="True">
                    <Setter Property="Content"
                            Value="取消收藏" />
                    <Setter Property="Background"
                            Value="OrangeRed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <ListBox ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=2,AncestorType={x:Type UserControl}}, Path=DataContext.FavoritedPosts}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black"
                            BorderThickness="2">
                        <Grid>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Text="ID: " />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Text="标题: " />
                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Text="图像路径: " />
                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Text="链接: " />
                                <TextBlock Grid.Row="4"
                                           Grid.Column="0"
                                           Text="创建时间: " />
                                <TextBlock Grid.Row="5"
                                           Grid.Column="0"
                                           Text="最后编辑时间: " />
                                <TextBlock Grid.Row="6"
                                           Grid.Column="0"
                                           Text="作者ID: " />
                                <TextBlock Grid.Row="7"
                                           Grid.Column="0"
                                           Text="内容: " />
                                <TextBlock Grid.Row="8"
                                           Grid.Column="0"
                                           Text="分类: " />
                                <TextBlock Grid.Row="0"
                                           Grid.Column="1"
                                           Text="{Binding Post.ID}" />
                                <TextBlock Grid.Row="1"
                                           Grid.Column="1"
                                           Text="{Binding Post.Title}" />
                                <TextBlock Grid.Row="2"
                                           Grid.Column="1"
                                           Text="{Binding Post.IconPath}" />
                                <TextBlock Grid.Row="3"
                                           Grid.Column="1"
                                           Text="{Binding Post.Url}" />
                                <TextBlock Grid.Row="4"
                                           Grid.Column="1"
                                           Text="{Binding Post.CreationTime}" />
                                <TextBlock Grid.Row="5"
                                           Grid.Column="1"
                                           Text="{Binding Post.LastEditedTime}" />
                                <TextBlock Grid.Row="6"
                                           Grid.Column="1"
                                           Text="{Binding Post.AuthorID}" />
                                <TextBlock Grid.Row="7"
                                           Grid.Column="1"
                                           TextWrapping="Wrap"
                                           Text="{Binding Post.Content}" />
                                <TextBlock Grid.Row="8"
                                           Grid.Column="1"
                                           Text="{Binding Post.PostCategory}" />
                            </Grid>
                            <StackPanel HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="10">
                                <Button Content="查看"
                                        Margin="10"
                                        Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorLevel=2, AncestorType={x:Type UserControl}}, Path=DataContext.ViewPostDetailCommand}"
                                        CommandParameter="{Binding Post}" />
                                <Button Margin="10"
                                        Style="{StaticResource ConcernOrCancelConcernButtonStyle}"
                                        Command="{Binding FavoriteOrCancelFavoriteCommand}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
