<UserControl x:Class="Discovery.Client.SignIn.Views.SignIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Discovery.Client.SignIn.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   FontSize="50"
                   Text="登录"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0" />
        <Grid Grid.Row="1"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              TextBlock.FontSize="20">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Text="用户名" 
                       Margin="10"/>
            <TextBox Grid.Row="0"
                     Grid.Column="1" 
                     Width="200"
                     Margin="10"
                     Text="{Binding SignInName}"/>
            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="密码"
                       Margin="10"/>
            <PasswordBox x:Name="passwordBox" Grid.Row="1"
                         Grid.Column="1" 
                         Margin="10"/>
            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       HorizontalAlignment="Right"
                       Margin="5"
                       FontSize="15">
                <Hyperlink Command="{Binding NavigateToSignUpCommand}">还没有账号? 现在创建一个</Hyperlink>
            </TextBlock>
        </Grid>
        <Button Grid.Row="2"
                Content="登录"
                FontSize="30"
                Margin="30"
                BorderBrush="#B23D3939"
                Foreground="White"
                Padding="50, 5"
                HorizontalAlignment="Right"
                BorderThickness="3"
                Background="#FF2465F7"
                Style="{DynamicResource SignInButtonStyle}"
                Command="{Binding SignInCommand}"
                CommandParameter="{Binding ElementName=passwordBox}"/>
    </Grid>
</UserControl>
